{
  "name": "fuzz-run",
  "version": "3.0.0",
  "description": "Run all your NPM scripts more easily with fuzzy matching",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/sinedied/fuzz-run.git"
  },
  "exports": "./index.js",
  "bin": {
    "fr": "./bin/fr.js",
    "nr": "./bin/fr.js"
  },
  "scripts": {
    "lint": "xo",
    "lint:fix": "xo --fix",
    "test": "xo && jest",
    "release:check": "semantic-release --dry-run"
  },
  "keywords": [
    "npm",
    "run",
    "runner",
    "scripts",
    "yarn",
    "fuzzy",
    "fuzz",
    "cli",
    "helper"
  ],
  "author": {
    "name": "Yohan Lasorsa",
    "url": "https://twitter.com/sinedied"
  },
  "license": "MIT",
  "homepage": "https://github.com/sinedied/fuzz-run",
  "bugs": {
    "url": "https://github.com/sinedied/fuzz-run/issues"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "chalk-template": "^1.1.0",
    "cross-spawn": "^7.0.3",
    "fuzzysort": "^2.0.4"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "semantic-release": "^22.0.12",
    "semantic-release-npm-github": "^5.0.0",
    "xo": "^0.56.0"
  },
  "prettier": {
    "trailingComma": "none",
    "bracketSpacing": true
  },
  "xo": {
    "space": true,
    "prettier": true,
    "ignore": [
      "index.test.js"
    ]
  },
  "release": {
    "extends": "semantic-release-npm-github",
    "branches": "main"
  },
  "files": [
    "bin",
    "index.js"
  ]
}
